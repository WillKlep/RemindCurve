<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/black_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/black"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadTopic"
                android:inputType="textNoSuggestions"
                android:background="@drawable/black_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:textColor="@color/black"
                android:hint="Topic"
                android:gravity="start|center_vertical"
                android:textColorHint="@color/black"
                />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/upload_course"
                android:inputType="textNoSuggestions"
                android:background="@drawable/black_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:hint="Course"
                android:gravity="start|center_vertical"
                android:textColorHint="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/start_date_textview_label"
                android:text="Start Date"
                android:textSize="18dp"/>

                <Button
                    android:id="@+id/startDatePickerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JAN 01 2020"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    style="?android:spinnerStyle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/start_date_textview_label"
                    android:layout_marginTop="10dp"
                    android:onClick="openDatePicker"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/end_date_textview_label"
                android:text="End Date"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/endDatePickerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JAN 01 2020"
                android:textSize="20sp"
                android:textColor="@color/black"
                style="?android:spinnerStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_date_textview_label"
                android:layout_marginTop="10dp"
                android:onClick="openDatePicker"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/saveButton"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"
                android:backgroundTint="@color/main_red"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>